<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Ksp2Redux.Tools.Launcher.ViewModels.Shared"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ksp2Redux.Tools.Launcher.Views.Shared.NewsItemView"
             x:DataType="shared:NewsItemViewModel">
    <StackPanel Margin="0,0,0,12" Spacing="2">
        <TextBlock FontSize="14" FontFamily="{StaticResource JetBrainsMonoBold}"
                   Text="{Binding Title}" TextWrapping="WrapWithOverflow" />
        <TextBlock FontSize="11" FontFamily="{StaticResource JetBrainsMonoRegular}"
                   Text="{Binding Subtitle}" TextWrapping="WrapWithOverflow" />
    </StackPanel>
</UserControl>
